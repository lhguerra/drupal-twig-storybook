<h1>Storybook</h1>

<ul class='storybook-navigation'>
{% for component in variables.components|keys %}
  <li data-target={{ component }}>
    {{ component }}
  </li>
{% endfor %}
</ul>

<div class='component-wrapper'>
  {% for name, component in variables.components %}
    <div class='component' id={{name}}>
      {% include "@#{variables.activeTheme}/" ~ component.path with component.data %}
    </div>
  {% endfor %}
</div>
