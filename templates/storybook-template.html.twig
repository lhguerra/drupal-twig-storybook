<div class='storybook-container'>
  <div class='storybook-navigation'>
    <h2>Twig Storybook</h2>
    <ul>
    {% for key, component in variables.components %}
      <li data-target={{ key }}>
        {{ component.title }}
      </li>
    {% endfor %}
    </ul>
  </div>

  <div class='component-wrapper'>
    {% for name, component in variables.components %}
      <div class='component' id={{name}}>
        {% include "@#{variables.activeTheme}/" ~ component.path with component.data %}
      </div>
    {% endfor %}
  </div>
</div>
